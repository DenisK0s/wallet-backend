{
    "openapi": "3.0.0",
    "info": {
      "title": "Wallet API",
      "version": "1.0.0"
    },
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "servers": [
      {
        "url": "http://www.localhost:4000"
      },
      {
        "url": "https://dementrors-waller.herokuapp.com"
      }
    ],
    "tags": [
        {
            "name": "Auth",
            "description": "Authorization endpoint"
        }
    ],
    "paths":  {
            "api/users/auth ":{
                "post": {
                    "tags": ["Auth"],
                    "summary": "User registration",
                    "parameters": [],
                    "security": [],
                    "requestBody": {
                        "description": "Registration object",
                        "required": true,
                        "content": {
                            "application/json": {
                                "shema": {
                                    "$ref": "#/components/shemas/RegistrationRequest"
                                }
                            }
                        },
                        "responses": {
                            "201": {
                                "description": "Successful operation",
                                "content": {
                                    "application/json": {
                                        "shema": {
                                            "$ref": "#/components/shemas/RegistrationResponse"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
    },
    "components": {
        "shemas": {
            "RegistrationRequest": {
                "type": "object",
                "required": [ "email", "password"],
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User`s email",
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "description":"User`s password",
                        "example": "qwe123"
                    }
                }
            }
        }   
    }
}